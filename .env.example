# LLM API Keys (Choose one or configure fallback)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=

# OpenAlex Configuration
OPENALEX_EMAIL=your_email@example.com  # Polite pool access (required)
OPENALEX_API_KEY=                       # Optional: Premium API key for 1M requests/day (get from https://openalex.org/account)

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
RECIPIENT_EMAIL=recipient@example.com

# System Configuration
PROFILE_CACHE_PATH=./cache/profile.json
PDF_STORAGE_PATH=./data/papers
USER_PAPERS_PATH=./data/user_papers

# Advanced Settings
MAX_PAPERS_TO_ANALYZE=2           # Number of papers to deeply analyze per search
SEARCH_DAYS_BACK=30               # How many days back to search for papers
MIN_BORROWABILITY_SCORE=0.5       # Minimum score (0.0-1.0) to include paper in results
MAX_RESULTS_PER_QUERY=20          # Maximum papers to fetch per query page
TARGET_NEW_PAPERS=5               # Target number of NEW papers to find per query (Deep Search)
MAX_PAGES_TO_SCAN=5               # Maximum pages to scan per query before giving up
PAPER_HISTORY_DAYS=365            # How long to remember sent papers (prevents duplicates)
LLM_TEMPERATURE=0.7               # Creativity level for LLM (0.0-1.0)
LLM_MODEL=deepseek-reasoner          # LLM model to use
